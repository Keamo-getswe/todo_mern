<%- include("header") -%>
<div id="heading" class="box">
	<h1><%= listTitle %></h1>
</div>
<div class="box">
	<%for (var i = 0; i < newListItems.length; ++i) {%>
		<div class="item">
			<input type="checkbox">
			<p><%= newListItems[i].name%></p>
		</div>
	<%}%>

	<form class="item" action="/" method="post">
		<input type="text" name="newitem" placeholder="New task" autocomplete="off"><br>
		<button type="submit" name="list" value=<%= listTitle %>>+</button>
	</form>
</div>
<%- include("footer") -%>
